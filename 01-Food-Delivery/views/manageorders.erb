<form action="/indexmanager/<%=@login%>/manageorders/markdelivered" method="post">
  <% @orders_undelivered.each_with_index do |order, index| %>
    <p><%= index + 1 %>. <strong><%= order.employee.name %></strong> doit livrer <strong><%= order.meal.name %></strong> pour <strong><%=order.customer.name%></strong></p>
  <% end %>
