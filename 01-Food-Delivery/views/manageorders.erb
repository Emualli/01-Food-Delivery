<form action="/indexmanager/<%=@login%>/manageorders/add" method="post">
  <p>Client :  <select name="customer">
    <% @customers.each_with_index do |customer, index| %>
    <option value="<%= customer.id %>"><%= customer.name %></option>
    <% end %>
  </select>
  Repas :  <select name="meal">
    <% @meals.each_with_index do |meal, index| %>
    <option value="<%= meal.id %>"><%= meal.name %></option>
    <% end %>
  </select>
  Livreur :  <select name="employee">
    <% @employees.each_with_index do |employee, index| %>
    <option value="<%= employee.id %>"><%= employee.name %>, <%= employee.manager ? "Manager" : "Delivery" %></option>
    <% end %>
  </select>
  <input type="submit" value="Ajouter la commande"></p>
</form>
